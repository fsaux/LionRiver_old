<UserControl x:Class="LionRiver.MeasureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >

    <Grid  HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFBDA847" Height="74" Width="76" Margin="20,20,0,0">
        <Label Content="DST:" Margin="0,0,0,0"/>
        <Label Content="BRG:" Margin="0,16,0,0"/>
        <Label Content="TWA:" Margin="0,32,0,0"/>
        <Label Content="TTG:" Margin="0,48,0,0"/>
        <TextBlock Text="{Binding Path=DST, StringFormat={}{0:0.0}}" Margin="0,5,5,0" HorizontalAlignment="Right" Foreground="Black"/>
        <TextBlock Text="{Binding Path=BRG, StringFormat={}{0:0}}" Margin="0,21,5,0" HorizontalAlignment="Right" Foreground="Black"/>
        <TextBlock Text="{Binding Path=TWA, StringFormat={}{0:0}}" Margin="0,37,5,0" HorizontalAlignment="Right" Foreground="Black"/>
        <TextBlock Text="{Binding Path=TTG, StringFormat=\{0:h\\:mm\}}" Margin="0,53,5,0" HorizontalAlignment="Right" Foreground="Black"/>
    </Grid>
</UserControl>
