<Window x:Class="LionRiver.LogCommentDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Comment" Height="127" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" Padding="5"
        FocusManager.FocusedElement="{Binding ElementName=textBox1}">
        
    <Grid>
        <TextBox Height="48" HorizontalAlignment="Stretch" Margin="5,5,5,0" Name="textBox1" VerticalAlignment="Top" Width="Auto" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="198,0,0,6" Name="button1" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="button1_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="117,0,0,6" Name="button2" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
    </Grid>
</Window>
